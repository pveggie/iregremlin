<% content_for :title do %>
  Home
<% end %>
<div class="bg-dark-brown">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-8 col-md-offset-2">
        <div id="info-header" class="bar-inline">
          <div>
            Puzzle <span id="info-number"><%= @puzzle.number %></span>: <%= @puzzle.name %>
          </div>
          <div class="text-right btn btn-sm btn-primary">
            How to Play
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="bg-light-brown">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">

        <div class="game-screen">
          <table class="border-collapse game-grid">
            <% @puzzle_rows.each do |row| %>
              <tr>
                <% row.each do |cell| %>
                  <td class="<%= cell.content %>" id="<%= cell.column_number %>-<%= cell.row_number %>" data-cell-type="<%= cell.content_type %>">
                      <div class="highlighter-blue"></div>
                      <div class="highlighter-red"></div>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </table>

          <div class="game-info-box-small">
            <i class="fa fa-heart" aria-hidden="true"></i> <span id="info-hp">20</span>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<div class="bg-dark-brown">
